<%- include('partials/header') %>

<main class="access-point">
    <form action="/signup" method="post">
        <p class="form-title">Sign Up</p>

        <% if(error) { %>
            <p class="error"><%= message %></p>
        <% } %>

        <label for="">Full Name</label>
        <input type="text" name="fullname" id="" value="<%= user.fullname %>" required>
        <label for="">Email Address</label>
        <input type="email" name="email" id="" value="<%= user.email %>" required>
        <label for="">Password</label>
        <input type="password" name="password" id="" value="<%= user.password %>" required minlength="8">
        <label for="">Confirm Password</label>
        <input type="password" name="confirmPassword" id="" value="<%= user.confirmPassword %>" required minlength="8">
        <input type="submit" value="Create Account">
        <p>Already have an account? <a href="/login">Log In</a></p>
    </form>
</main>

<%- include('partials/footer') %>